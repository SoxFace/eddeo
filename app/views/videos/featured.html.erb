<div class="container">
  <h2><%= @video.try :name %> with <strong><%= @video.try :stats %> plays</strong></h2>
  <hr>

  <!-- .container is main centered wrapper -->
  <div class="container">

    <div class="row">
      <div class="eight columns">
      <h4>QuickNote</h4>
        <div class="top-bar">
        </div>
          <div id="container">
              <div class="editable">
                  <h5>You can type up your notes here while you watch the video.</h5>
                  <br>
                  <h5>Remember to copy and save once you're finished watching!!!</h5>
              </div>
          </div>
        </div>

        <script>
        var editor = new MediumEditor('.editable', {
                  buttonLabels: 'fontawesome'
              }),
              cssLink = document.getElementById('medium-editor-theme');
              document.getElementById('sel-themes').addEventListener('change', function () {
                  cssLink.href = '../stylesheets/themes/' + this.value + '.css';
              });

        $('.editable').on('input', function() {
          // Do some work
        });
        
        </script>

      <div class="six columns"><%= @video.try :name %>
        <iframe src="//player.vimeo.com/video/<%= @video.try :vimeo_id %>?portrait=0&color=333" width="600" height="337" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe><a class="button button-primary" href="/index">BACK TO VIDEOS</a>

        <div id="disqus_thread"></div>
        <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
      </div>
      <hr>
    </div>
      
    </div>

  </div>
</div>
    